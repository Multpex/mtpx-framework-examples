{
  "name": "mtpx-minimal-app",
  "version": "0.1.1",
  "type": "module",
  "description": "Minimal example of @multpex/sdk-typescript features",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "typecheck": "tsc --noEmit",
    "build": "bun build ./src/index.ts --target=bun --outdir=./dist --minify --bytecode --sourcemap=linked",
    "build:prod": "NODE_ENV=production bun run build",
    "start:prod": "bun run ./dist/index.js",
    "clean": "rm -rf dist",
    "test": "bun test tests/",
    "test:integration": "bun test tests/integration.test.ts",
    "postman:test": "bunx newman run postman/mtpx-minimal-app.postman_collection.json -e postman/mtpx-minimal-app.postman_environment.json",
    "postman:test:verbose": "bunx newman run postman/mtpx-minimal-app.postman_collection.json -e postman/mtpx-minimal-app.postman_environment.json --verbose"
  },
  "dependencies": {
    "@multpex/sdk-typescript": "0.1.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "jsonwebtoken": "^9.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "typescript": "^5.9.3"
  }
}
