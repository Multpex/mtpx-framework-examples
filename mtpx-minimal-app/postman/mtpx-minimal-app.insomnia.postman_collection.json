        },
        {
          "name": "Get Stats (With Auth)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Returns stats', function () {",
                  "    pm.response.to.have.status(200);",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.totalItems).to.be.a('number');",
                  "    pm.expect(jsonData.totalValue).to.be.a('number');",
