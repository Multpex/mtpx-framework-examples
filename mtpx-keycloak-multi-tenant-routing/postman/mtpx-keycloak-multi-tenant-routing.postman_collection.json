                  "pm.test('Realm1 note creation returns 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Saved note belongs to realm1 database', function () {",
                  "  pm.expect(json.note.message).to.equal(pm.environment.get('realm1NoteMessage'));",
                  "  pm.expect(json.note.realm).to.equal('realm1');",
                  "  pm.expect(json.note.db_tenant).to.equal('local-pg-realm1');",
                  "  pm.expect(json.tenant.currentDatabase).to.equal('local-pg-realm1');",
                  "});"
