    {
      "name": "Realm 1",
      "item": [
        {
          "name": "Login User 1",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "",
                  "pm.test('Realm1 login returns 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Token preview points to realm1 and local-pg-realm1', function () {",
                  "  pm.expect(json.tenant.realm).to.equal('realm1');",
                  "  pm.expect(json.tenant.source).to.equal('hostname');",
                  "  pm.expect(json.tokenPreview.tenant).to.equal('realm1');",
                  "  pm.expect(json.tokenPreview.tenantId).to.equal('local-pg-realm1');",
                  "});",
                  "",
                  "if (json.accessToken) {",
                  "  pm.environment.set('realm1AccessToken', json.accessToken);",
                  "}",
                  "if (json.refreshToken) {",
                  "  pm.environment.set('realm1RefreshToken', json.refreshToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{realm1Username}}\",\n  \"password\": \"{{realm1Password}}\"\n}"
            },
            "url": {
              "raw": "{{realm1BaseUrl}}/tenant-routing/auth/login",
              "host": [
                "{{realm1BaseUrl}}"
              ],
              "path": [
                "tenant-routing",
                "auth",
                "login"
              ]
            }
          }
        },
        {
          "name": "Get Context",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
