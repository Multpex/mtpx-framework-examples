    {
      "name": "Security",
      "item": [
        {
          "name": "Reject Realm2 Token On Realm1 Host",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "",
                  "pm.test('Cross-tenant token on realm1 host returns 403', function () {",
                  "  pm.response.to.have.status(403);",
                  "});",
                  "",
                  "pm.test('Cross-tenant realm2 token is rejected on realm1 host', function () {",
                  "  pm.expect(json.error.message).to.include('Cross-tenant token rejected');",
                  "  pm.expect(json.error.message).to.include('realm1');",
                  "  pm.expect(json.error.message).to.include('realm2');",
                  "});"
                ]
              }
            }
