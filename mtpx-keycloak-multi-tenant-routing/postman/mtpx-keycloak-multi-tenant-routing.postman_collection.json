                  "pm.test('Realm1 context returns 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Realm1 context is routed to local-pg-realm1', function () {",
                  "  pm.expect(json.tenant.realm).to.equal('realm1');",
                  "  pm.expect(json.user.tenantId).to.equal('local-pg-realm1');",
                  "  pm.expect(json.tenant.currentDatabase).to.equal('local-pg-realm1');",
                  "});"
