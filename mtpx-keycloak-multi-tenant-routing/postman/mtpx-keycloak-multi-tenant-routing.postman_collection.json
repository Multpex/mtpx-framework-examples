          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{realm1AccessToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"{{realm1NoteMessage}}\"\n}"
            },
            "url": {
              "raw": "{{realm1BaseUrl}}/tenant-routing/notes",
              "host": [
                "{{realm1BaseUrl}}"
              ],
              "path": [
                "tenant-routing",
                "notes"
              ]
            }
          }
        },
        {
          "name": "List Notes",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "const messages = (json.notes || []).map(function (note) { return note.message; });",
                  "",
                  "pm.test('Realm1 notes list returns 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Realm1 list sees its own note', function () {",
                  "  pm.expect(messages).to.include(pm.environment.get('realm1NoteMessage'));",
                  "});",
                  "",
                  "pm.test('Realm1 list does not see realm2 note', function () {",
                  "  const realm2Note = pm.environment.get('realm2NoteMessage');",
                  "  if (realm2Note) {",
                  "    pm.expect(messages).to.not.include(realm2Note);",
                  "  }",
                  "});",
                  "",
                  "pm.test('Realm1 list is still routed to local-pg-realm1', function () {",
                  "  pm.expect(json.tenant.currentDatabase).to.equal('local-pg-realm1');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
