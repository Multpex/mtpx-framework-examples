{
  "name": "mtpx-scheduled-jobs",
  "version": "0.1.3",
  "type": "module",
  "description": "Example of scheduled/cron jobs with @multpex/sdk-typescript",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "typecheck": "tsc --noEmit",
    "worker": "bun run src/worker.ts",
    "test": "bun test tests/",
    "test:integration": "bun test tests/integration.test.ts",
    "test:e2e": "bun test tests/e2e.test.ts",
    "postman:test": "bunx newman run postman/mtpx-scheduled-jobs.postman_collection.json -e postman/mtpx-scheduled-jobs.postman_environment.json",
    "postman:test:verbose": "bunx newman run postman/mtpx-scheduled-jobs.postman_collection.json -e postman/mtpx-scheduled-jobs.postman_environment.json --verbose"
  },
  "dependencies": {
    "@multpex/sdk-typescript": "0.1.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "typescript": "^5.9.3"
  }
}
