{
  "name": "mtpx-msg-channels",
  "version": "0.1.3",
  "type": "module",
  "description": "Example of emit vs channel messaging with svc-a, svc-b and svc-c",
  "main": "src/api.ts",
  "scripts": {
    "dev": "bun run --hot src/app.ts",
    "dev:svc_a": "SERVICE=svc_a bun run --hot src/svc_a.ts",
    "dev:svc_b": "SERVICE=svc_b bun run --hot src/svc_b.ts",
    "dev:svc_c": "SERVICE=svc_c bun run --hot src/svc_c.ts",
    "start": "bun run src/app.ts",
    "start:svc_a": "SERVICE=svc_a bun run src/svc_a.ts",
    "start:svc_b": "SERVICE=svc_b bun run src/svc_b.ts",
    "start:svc_c": "SERVICE=svc_c bun run src/svc_c.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "dependencies": {
    "@multpex/sdk-typescript": "0.1.3"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "typescript": "^5.9.3"
  }
}
